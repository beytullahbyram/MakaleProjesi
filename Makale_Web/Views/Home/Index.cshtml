@model List<Makaleler>
@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="row">

        <div class="col-md-3">
            @Html.Partial("_PartialPageKategori")
        </div>
        <b>test</b>
        <div class="col-md-9">

            <div class="row carousel-holder">

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="slide-image" src="~/image/book.jpg" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/image/book2.jpg" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/image/book.jpg" alt="">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"><i class="fa-sharp fa-solid fa-star"></i></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"><i class="fa-sharp fa-solid fa-star"></i></span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (Makaleler item in Model)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4" data-notid="@item.ID">
                        <div class="thumbnail">
                            <img src="~/image/bookimg.jpg" alt="">
                            <div class="caption">
                                <h4>
                                    <a href="#" data-toggle="modal" data-target="#Modal2" data-notid="@item.ID">@item.Baslik</a>
                                </h4>
                                <h6>
                                    <span class="glyphicon glyphicon-user"><b>@item.Kullanici.KullaniciAdi   </b></span><br />
                                    <span class="glyphicon glyphicon-time">@item.DegistirmeTarihi.ToString("dd.MM.yy HH:mm")</span><br />
                                </h6>
                                @if (!string.IsNullOrEmpty(item.Text) && item.Text.Length > 5)
                                {
                                    <p>
                                        @item.Text.Substring(0, 10)
                                        <a href="#" class="btn-btn btn-default btn-xs" data-toggle="modal" data-target="#Modal2" data-notid="@item.ID">devamı...</a>
                                    </p>
                                }
                                else
                                {
                                    <p>@item.Text</p>
                                }
                            </div>
                            <hr />
                            <div class="ratings">
                                <p class="pull-right">
                                    <button class="btn btn-default btn-xs" data-toggle="modal" data-target="#Modal1" data-notid="@item.ID">
                                        <span class="glyphicon glyphicon-comment"></span>
                                        Yorumlar...
                                    </button>
                                </p>
                                <p>
                                    <button class="btn btn-default btn-xs like-btn" data-notid="@item.ID" data-like="false">
                                        <span class="glyphicon glyphicon-heart-empty like"></span>
                                        <span class="begenisayisi"> @item.BegeniSayisi </span>
                                    </button>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section footer
{
    @Html.Partial("_PartialPageFooter");
}
@BootsrapHelper.ModalPopup("Modal1", "Yorumlar")
@BootsrapHelper.ModalPopup("Modal2", "Makale")


<script src="~/Scripts/Index.js"></script>

<script src="~/Scripts/LikeScript.js"></script>
<script src="~/Scripts/MakaleGoster.js"></script>


